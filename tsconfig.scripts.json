{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist/scripts",
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "scripts/**/*.ts",
    "scripts/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "src-tauri/target",
    "tests/**/*",
    "out",
    "dist",
    ".next"
  ]
}
